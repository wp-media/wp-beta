{
    "name": "wp-media/wp-beta",
    "description": "Beta for WordPress plugins",
    "license": "GPL-3.0-or-later",
    "authors": [
        {
            "name": "WP Media",
            "homepage": "https://github.com/wp-media/wp-beta",
            "role": "Developer"
        }
    ],
    "support": {
        "issues": "https://github.com/wp-media/wp-beta/issues"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "phpstan/extension-installer": true
        }
    },
    "require": {
        "php": ">=7.3"
    },
    "require-dev": {
        "php-stubs/wordpress-tests-stubs": "^6.5",
		"phpcompatibility/phpcompatibility-wp": "^2.0",
		"phpstan/extension-installer": "^1.3",
		"phpstan/phpstan-mockery": "^2.0",
		"phpstan/phpstan-phpunit": "^2.0",
        "roave/security-advisories": "dev-master",
        "szepeviktor/phpstan-wordpress": "^2.0",
        "wp-coding-standards/wpcs": "^3",
        "wp-media/phpunit": "^3"
    },
    "autoload": {
        "psr-4": {
            "WPMedia\\Beta\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "WPMedia\\Beta\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "phpcs": "vendor/bin/phpcs",
        "phpcs:ci": "vendor/bin/phpcs --report-full --report-checkstyle=./phpcs-report.xml",
        "phpcs:fix": "vendor/bin/phpcbf",
        "phpstan": "vendor/bin/phpstan analyze --memory-limit=2G",
        "test-unit": "\"vendor/bin/phpunit\" --testsuite unit --colors=always --configuration tests/Unit/phpunit.xml.dist",
        "test-integration": "\"vendor/bin/phpunit\" --testsuite integration --colors=always --configuration tests/Integration/phpunit.xml.dist"
    }
}
